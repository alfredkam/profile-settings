[user]
	name = alfredkam
	email = akam@adcnx.com
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
    	local = yellow
    	remote = green
[color "diff"]
    	meta = yellow bold
    	frag = magenta bold
    	old = red bold
    	new = green bold
[color "status"]
    	added = yellow
    	changed = green
    	untracked = cyan
[alias]
	stat = status -sb
	a = add
	aa = !git add -u && git add . && git status
	c = commit -am
	am = commit --amend -m 
	br = branch
	co = checkout
	cob = checkout -b
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbre-commit --all
	ls = ls-files
	# show files ignored by git
	ign = ls-files -o -i --exclude-standard
	wipe = reset --hard
	nbranch = !sh -c 'git checkout -b $1 && git push origin $1'
	wc = whatchanged
	merge = merge --no--ff
	pushall = "!f(){ for i in `git remote`; do if [ $i != 'deploy' ]; then git push $i $1; fi; done; };f"
	pullall = "!f(){ for i in `git remote`; do git pull $i $1; done; };f"

